{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["docs", "dist"],
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "src/*": ["./src/*"],
            "/src/*": ["./src/*"],
            "@styles/*": ["./src/styles/*"],
            "@assets/*": ["./src/assets/*"]
        }
    }
}
