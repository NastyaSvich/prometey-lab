---
import { Image } from "astro:assets";
import logo from "src/assets/images/logo-black.png";

---

  <div class="logo-content">
    <a href="/" class="logo-link">
        <Image src={logo} class="logo" alt="Администрирование баз данных PostgreSQL" />
    </a>
    <a href="/" class="logo-link">
        <span class="text">PROMETEY LAB</span>
    </a>
  </div>

<style scoped lang="less">
@import '@styles/fontsMixins.less';
@import '@styles/colors.less';
@import '@styles/breakpoints.less';

.logo-content {
    display: flex;
    align-items: center;
    gap: 7px;

    .text {
        .fontOpenSansBold();
        font-size: 30px;
        color: @primary-black-text;
    }

    .mediaPhone({
        .logo {
            // width: 24px;
        }

        .text {
            font-size: 20px;
        }
    });
}
</style>
