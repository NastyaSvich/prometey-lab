---
import HorizontalLineTitle from "src/components/horizontal-line-title/HorizontalLineTitle.astro";
import { Image } from "astro:assets";
import Button from "src/components/button/Button.astro";
import vinlab from "src/assets/images/vinlab.svg";
import storeez from "src/assets/images/12storeez.svg";
import monastyrev from "src/assets/images/monastyrev.svg";
import teamIdea from "src/assets/images/TeamIdea.svg";
import sberBank from "src/assets/images/SberBank.svg";
import ozon from "src/assets/images/ozon.svg";
import yandex from "src/assets/images/yandex.svg";
import gosUslugi from "src/assets/images/GosUslugi.svg";

import "src/logic/company-page/clients/Clients.less";

export type ClientsProps = {
    icon: ImageMetadata;
};

const clients: ClientsProps[] = [
    { icon: vinlab },
    { icon: storeez },
    { icon: monastyrev },
    { icon: teamIdea },
    { icon: sberBank },
    { icon: ozon },
    { icon: yandex },
    { icon: gosUslugi },
];

/**
 * Компонент раздела "Наши клиенты".
 */
---

<div class="clients">
    <HorizontalLineTitle
        title="НАШИ КЛИЕНТЫ"
        subtitle="При работе с нашими клиентами мы готовые привлекать сторонних экспертов для решения сложных задач, аудита и оптимизации"
        className="clients-container"
        contentClassName="clients-content"
    >
        <div class="clients-images">
            {
                clients.map(({ icon }) => (
                    <Image src={icon} alt="icon" class="client-image" />
                ))
            }
        </div>

        <div class="clients-description">
            <div class="button-wrapper">
                <Button
                    label="Оставить заявку на консультацию"
                    variant="outline"
                    size="big"
                    className="client-button"
                />
                <span class="mobile-button-text">Консультация</span>
            </div>
        </div>
    </HorizontalLineTitle>
</div>
