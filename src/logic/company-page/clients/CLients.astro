---
import HorizontalLineTitle from "src/components/horizontal-line-title/HorizontalLineTitle.astro";
import { Image } from "astro:assets";
import Button from "src/components/button/Button.astro";
import partner1 from "src/assets/images/partner-1.png";
import partner2 from "src/assets/images/partner-2.png";
import partner3 from "src/assets/images/partner-3.png";
import partner4 from "src/assets/images/partner-4.png";
import partner5 from "src/assets/images/partner-5.png";
import partner6 from "src/assets/images/partner-6.png";
import partner7 from "src/assets/images/partner-7.png";
import partner8 from "src/assets/images/partner-8.png";

import "src/logic/company-page/clients/Clients.less";

export type ClientsProps = {
    icon: ImageMetadata;
};

const clients: ClientsProps[] = [
    { icon: partner2 },
    { icon: partner3 },
    { icon: partner4 },
    { icon: partner5 },
    { icon: partner6 },
    { icon: partner1 },
    { icon: partner8 },
    { icon: partner7 },
];

/**
 * Компонент раздела "Наши клиенты".
 */
---

<div class="clients">
    <HorizontalLineTitle
        title="НАШИ КЛИЕНТЫ"
        subtitle="При работе с нашими клиентами мы готовые привлекать сторонних экспертов для решения сложных задач, аудита и оптимизации"
        className="clients-container"
        contentClassName="clients-content"
    >
        <div class="clients-images">
            {
                clients.map(({ icon }) => (
                    <Image src={icon} alt="icon" class="client-image" />
                ))
            }
        </div>

        <div class="clients-description">
            <div class="button-wrapper">
                <Button
                    label="Оставить заявку на консультацию"
                    variant="outline"
                    size="big"
                    className="client-button"
                />
                <span class="mobile-button-text">Консультация</span>
            </div>
        </div>
    </HorizontalLineTitle>
</div>
