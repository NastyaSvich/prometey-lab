---
import HorizontalLineTitle from "src/components/horizontal-line-title/HorizontalLineTitle.astro";
import { Image } from "astro:assets";
import Button from "src/components/button/Button.astro";
import partner1 from "src/assets/images/partner-1.png";
import partner2 from "src/assets/images/partner-2.png";
import partner3 from "src/assets/images/partner-3.png";
import partner4 from "src/assets/images/partner-4.png";
import partner5 from "src/assets/images/partner-5.png";
import partner6 from "src/assets/images/partner-6.png";
import partner7 from "src/assets/images/partner-7.png";
import partner8 from "src/assets/images/partner-8.png";

import "src/logic/company-page/partners/Partners.less";

export type PartnersProps = {
    icon: ImageMetadata;
};

const partners: PartnersProps[] = [
    { icon: partner2 },
    { icon: partner3 },
    { icon: partner4 },
    { icon: partner5 },
    { icon: partner6 },
    { icon: partner1 },
    { icon: partner8 },
    { icon: partner7 },
];

/**
 * Компонент раздела "Наши партнеры".
 */
---

<div class="partners">
    <HorizontalLineTitle
        title="НАШИ ПАРТНЕРЫ"
        subtitle="При работе с нашими клиентами мы готовые привлекать сторонних экспертов для решения сложных задач, аудита и оптимизации"
        className="partners-container"
        contentClassName="partners-content"
    >
        <div class="partners-images">
            {
                partners.map(({ icon }) => (
                    <Image src={icon} alt="icon" class="partner-image" />
                ))
            }
        </div>

        <div class="partners-description">
            <p class="recommendation-text">
                <strong>Клиенты</strong> рекомендуют PROMETEY LAB и мы выплачиваем
                бонус за эти рекомендации
            </p>
            <Button
                label="Стать партнером"
                variant="outline"
                size="big"
                className="partner-button"
            />
        </div>
    </HorizontalLineTitle>
</div>
