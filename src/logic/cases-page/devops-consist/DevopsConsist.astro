---
import type { CardForCasesProps } from "src/components/card-for-cases/CardForCases.astro";
import CardForCases from "src/components/card-for-cases/CardForCases.astro";
import HorizontalLineTitle from "src/components/horizontal-line-title/HorizontalLineTitle.astro";
import "src/logic/cases-page/devops-consist/DevopsConsist.less";
import card1 from "src/assets/images/devops-case-1.svg";
import card2 from "src/assets/images/devops-case-2.png";
import card3 from "src/assets/images/devops-case-3.svg";

const consists: CardForCasesProps[] = [
    {
        image: card1,
        title: "Непрерывная доставка — CI/CD",
        descriptions: {
            firstPart:
                "<strong>Корректные изменения</strong> в коде будут в пару кликов отражены в продукте без простоя.",
            secondPart:
                "<strong>Ошибки не пройдут</strong> через систему автоматических тестов.",
        },
    },
    {
        image: card2,
        title: "Надежная и самостоятельная работа систем",
        descriptions: {
            firstPart:
                "Системы будут сами <strong>балансировать нагрузку</strong>, находить неработающие элементы и обслуживать приложения.",
            secondPart:
                "Сервер не упадет от роста запросов — выдержит высокие нагрузки на <strong>Черную пятницу, IPO или промоакцию</strong>.",
        },
    },
    {
        image: card3,
        title: "Автоматизированный мониторинг",
        descriptions: {
            firstPart:
                "Системы <strong>мониторинга</strong> с оповещениями <strong>по любым каналам</strong> и <strong>в любое время</strong>.",
            secondPart:
                "<strong>Прием заявок по инцидентам</strong> через чат-боты в Telegram и Slack будет автоматическим.",
        },
    },
    {
        image: card1,
        title: "Гибкая Agile разработка",
        descriptions: {
            firstPart:
                "Будете <strong>разрабатывать короткими итерациями</strong>. Все этапы разработки станут параллельными.",
            secondPart:
                "Пользователь <strong>получит работающий прототип продукта</strong> почти на старте проекта.",
        },
    },
    {
        image: card2,
        title: "IaC (Инфраструктура как код)",
        descriptions: {
            firstPart:
                "Сможете управлять и изменять инфраструктуру ЦОД <strong>не вручную, а через конфигурационные файлы</strong>.",
            secondPart:
                "Упростите автоматизацию развертывания и перенос проектов на другие платформы и серверы, снизите риск ошибок.",
        },
    },
    {
        image: card3,
        title: "Управление версиями",
        descriptions: {
            firstPart:
                "Сможете отслеживать и сохранять <strong>все изменения</strong> в коде. Объединять их, разрешать конфликты и возвращаться к ранним версиям кода.",
            secondPart: "Построите <strong>фундамент DevSecOps</strong>.",
        },
    },
];

/**
 * Компонент раздела "Из чего состоит DevOps support".
 */
---

<HorizontalLineTitle
    title="ИЗ ЧЕГО СОСТОИТ DEVOPS SUPPORT"
    className="consists"
    contentClassName="consists-content"
>
    {
        consists.map((consists) => (
            <CardForCases
                image={consists.image}
                title={consists.title}
                descriptions={consists.descriptions || {}}
                showVerticalLine={false}
                showButton={false}
            />
        ))
    }
</HorizontalLineTitle>
