---
import type { CardForCasesProps } from "src/components/card-for-cases/CardForCases.astro";
import CardForCases from "src/components/card-for-cases/CardForCases.astro";
import HorizontalLineTitle from "src/components/horizontal-line-title/HorizontalLineTitle.astro";
import "src/logic/cases-page/devops-consist/DevopsConsist.less";
import card1 from "src/assets/images/devops-case-1.svg";
import card2 from "src/assets/images/devops-case-2.png";
import card3 from "src/assets/images/devops-case-3.svg";

const consists: CardForCasesProps[] = [
    {
        image: card1,
        title: "Непрерывная доставка — CI/CD",
        descriptions: {
            firstPart: "Корректные изменения ",
            firstHighlight:
                "в коде будут в пару кликов отражены в продукте без простоя.",
            secondPart: "Ошибки ",
            secondHighlight: "не пройдут через систему автоматических тестов.",
        },
    },
    {
        image: card2,
        title: "Надежная и самостоятельная работа систем",
        descriptions: {
            firstPart: "Системы ",
            firstHighlight:
                "сами балансировать нагрузку, находить неработающие элементы и обслуживать приложения.",
            secondPart: "Сервер ",
            secondHighlight:
                "не упадет от роста запросов — выдержит высокие нагрузки на Черную пятницу, IPO или промоакцию.",
        },
    },
    {
        image: card3,
        title: "Автоматизированный мониторинг",
        descriptions: {
            firstPart: "Системы ",
            firstHighlight:
                "мониторинга с оповещениями по любым каналам и в любое время.",
            secondPart: "Прием заявок ",
            secondHighlight:
                "по инцидентам через чат-боты в Telegram и Slack будет автоматическим.",
        },
    },
    {
        image: card1,
        title: "Гибкая Agile разработка",
        descriptions: {
            firstHighlight:
                "Будете разрабатывать короткими итерациями. Все этапы разработки станут параллельными.",
            secondHighlight:
                "Пользователь получит работающий прототип продукта почти на старте проекта.",
        },
    },
    {
        image: card2,
        title: "IaC (Инфраструктура как код)",
        descriptions: {
            firstHighlight:
                "Сможете управлять и изменять инфраструктуру ЦОД не вручную, а через конфигурационные файлы.",
            secondHighlight:
                "Упростите автоматизацию развертывания и перенос проектов на другие платформы и серверы, снизите риск ошибок.",
        },
    },
    {
        image: card3,
        title: "Управление версиями",
        descriptions: {
            firstHighlight:
                "Сможете отслеживать и сохранять все изменения в коде. Объединять их, разрешать конфликты и возвращаться к ранним версиям кода.",
            secondPart: "Построите фундамент DevSecOps.",
        },
    },
];

/**
 * Компонент раздела "Из чего состоит DevOps support".
 */
---

<HorizontalLineTitle
    title="ИЗ ЧЕГО СОСТОИТ DEVOPS SUPPORT"
    className="consists"
    contentClassName="consists-content"
>
    {
        consists.map((consists) => (
            <CardForCases
                image={consists.image}
                title={consists.title}
                descriptions={consists.descriptions || {}}
                showVerticalLine={false}
                showButton={false}
            />
        ))
    }
</HorizontalLineTitle>
