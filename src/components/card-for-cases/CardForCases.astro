---
import "src/components/card-for-cases/CardForCases.less";
import { Image } from "astro:assets";
import VerticalLineTitle from "src/components/vertical-line-title/VerticalLineTitle.astro";
import Button from "src/components/button/Button.astro";

export type CardForCasesProps = {
    /**
     * Картинка карточки.
     */
    image?: ImageMetadata;

    /**
     * иконка карточки.
     */
    icon?: ImageMetadata;

    /**
     * Ссылка для иконки.
     */
    iconLink?: string;

    /**
     * Заголовок карточки.
     */
    title?: string;

    /**
     * Подзаголовок карточки.
     */
    subtitle?: string;

    /**
     * описание карточки.
     * firstPart, secondPart - жирный шифт
     */
    descriptions?: {
        firstPart?: string;
        firstHighlight?: string;
        secondPart?: string;
        secondHighlight?: string;
    };

    /**
     * Дополнительный css-класс.
     */
    className?: string;

    /**
     * Текст у кнопки.
     */
    buttonLabel?: string;

    /**
     * Модальное окно.
     */
    modalContent?: string;

    /**
     * Отображение вертикальной линии.
     * По умолчанию видима.
     */
    showVerticalLine?: boolean;

    /**
     * Отображение кнопки.
     * По умолчанию видима.
     */
    showButton?: boolean;
};

const {
    image,
    icon,
    iconLink,
    title,
    subtitle,
    descriptions = {},
    buttonLabel = "Читать",
    modalContent = "",
    className = "",
    showVerticalLine = true,
    showButton = true,
} = Astro.props;

/**
 * Компонент карточки с фото и заголовками в синей вертикальной линии.
 *
 * Определяющий css-класс: "devops-card".
 *
 */
---

<div class={`devops-card ${className}`}>
    <Image
        slot="image"
        src={image}
        alt={title || "icon"}
        class="devops-image"
    />

    <div slot="title" class="title-container">
        {
            showVerticalLine ? (
                <div class="title-wrapper">
                    {" "}
                    <VerticalLineTitle title={title} class="devops-title">
                        {subtitle && <span class="subtitle">{subtitle}</span>}
                        {icon && (
                            <a href={iconLink} class="icon-link">
                                <Image
                                    src={icon}
                                    alt="Action icon"
                                    class="action-icon"
                                />
                            </a>
                        )}
                    </VerticalLineTitle>
                </div>
            ) : (
                <h3 class="simple-title">{title}</h3>
            )
        }
    </div>

    <div slot="description" class="devops-content">
        {
            descriptions.firstPart || descriptions.firstHighlight ? (
                <p class="case-text">
                    {descriptions.firstPart && (
                        <span>{descriptions.firstPart}</span>
                    )}
                    {descriptions.firstHighlight}
                </p>
            ) : null
        }

        {
            descriptions.secondPart || descriptions.secondHighlight ? (
                <p class="case-text">
                    {descriptions.secondPart && (
                        <span>{descriptions.secondPart}</span>
                    )}
                    {descriptions.secondHighlight &&
                        ` ${descriptions.secondHighlight}`}
                </p>
            ) : null
        }
        {
            showButton && (
                <Button
                    label={buttonLabel}
                    variant="blue"
                    size="medium"
                    className="devops-button"
                />
            )
        }
        <div
            class="hidden-modal-content"
            style="display: none;"
            set:html={modalContent}
        />
    </div>
</div>

<script is:inline>
    function showCaseModal(button) {
        const content = decodeURIComponent(button.dataset.content);
        const modal = document.getElementById("globalModal");
        const contentDiv = document.getElementById("modalDynamicContent");

        if (content && modal && contentDiv) {
            contentDiv.innerHTML = content;
            modal.classList.add("open");
            document.body.style.overflow = "hidden";
        }
    }
</script>
