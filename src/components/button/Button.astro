---
import 'src/components/button/Button.less';

export type ButtonProps = {
    label: string;
    id?: string;
    type?: 'button' | 'submit' | 'reset';
    variant?: 'blue' | 'white' | 'outline';
    size?: 'big' | 'medium';
    className?: string
};

const {
    label,
    size = 'big',
    type = 'button',
    variant = 'blue',
    className = "",
    id = ""
} = Astro.props as ButtonProps;

const classNameStyle = `button ${className} ${variant} ${size}`;
---

<button id={id} type={type} class={classNameStyle}>
    {label}
</button>

