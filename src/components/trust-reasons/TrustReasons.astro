---
import HorizontalLineTitle from 'src/components/horizontal-line-title/HorizontalLineTitle.astro';
import Swiper from 'src/components/swiper/Swiper.astro';
import SwiperSlideElement from 'src/components/swiper/SwiperSlideElement.astro';
import CardDefault from 'src/components/card-default/CardDefault.astro';
import {Image} from 'astro:assets';
import coins from 'src/assets/images/coins.svg';
import lightning from 'src/assets/images/lightning.svg';
import clock from 'src/assets/images/clock.svg';
import lock from 'src/assets/images/lock.svg';
import team from 'src/assets/images/team.svg';
import wallet from 'src/assets/images/wallet.svg';
import 'src/components/trust-reasons/TrustReasons.less';

export type TrustReasonsProps = {
    title: string;
    icon: ImageMetadata;
    description: string;
};

const reasons: TrustReasonsProps[] = [
    {
        title: 'Стоимость команды',
        icon: coins,
        description:
            'Дополнительные задачи для штатных сотрудников не проходят без последствий. Качество их работы снижается, ' +
            'а недовольство растет. Мы же предлагаем экспертизу целого IT-отдела с гарантиями по SLA по цене 1 Senior-специалиста',
    },
    {
        title: 'Ключевые навыки',
        icon: lightning,
        description:
            'Штатные инженеры обычно сосредоточены на чем-то одном, а у нас есть 10+ компетенций в DevOps, Cloud, DBA, ' +
            'HighLoad и администрировании различных систем',
    },
    {
        title: 'Время работы',
        icon: clock,
        description:
            'Инхаус-специалисты работают с 9:00 до 18:00 и реагируют на инциденты в течение часа. ' +
            'Мы же доступны 24/7 и 365 дней в году и реагируем до 15 минут',
    },
    {
        title: 'Скрытые издержки',
        icon: lock,
        description:
            'Инхаус-команды часто выбирают «привычное» вместо «лучшего». У наших инженеров опыт шире любых команд и нет ограничений, ' +
            'а значит нас ничего не сдерживает от выбора оптимальных решений для вашего бизнеса',
    },
    {
        title: 'Скрытые выгоды',
        icon: team,
        description:
            'Команды на аутсорсе выводят продукты на рынок куда быстрее, чем внутренние. ' +
            'Нам не надо «срабатываться», долго проверять гипотезы и создавать процессы — остается только адаптировать и внедрить свой опыт',
    },
    {
        title: 'Управленческие издержки',
        icon: wallet,
        description:
            'Если IT — не ваше основное направление, то создавать свою команду инженеров и управлять ей — трудозатратно и не выгодно',
    },
];
---

<div class="trust-reasons">
    <HorizontalLineTitle
        title="6 ПРИЧИН ДОВЕРИТЬСЯ НАМ"
        className="trust-reasons-container"
        contentClassName="trust-reasons-content"
    >
        <Swiper>
            {
                reasons.map(({icon, title, description}) => (
                    <SwiperSlideElement>
                        <CardDefault className="trust-reasons-card">
                            <div slot="title" class="title-content">
                                <Image src={icon} alt="icon" class="icon" />
                                <span class="title">{title}</span>
                            </div>
                            <div slot="description" class="description">
                                {description}
                            </div>
                        </CardDefault>
                    </SwiperSlideElement>
                ))
            }
        </Swiper>
    </HorizontalLineTitle>
</div>
