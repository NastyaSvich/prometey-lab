---
import 'src/components/card/Card.less';

export type CardProps = {

    /**
     * Заголовок карточки.
     */
    title?: string;

    /**
     * Описание карточки.
     */
    description: string;

    /**
     * Фон карточки: может быть цвет, изображение, градиент и т.п.
     * По умолчанию: "transparent"
     * Задается форматом: "#ffffff", "url('/images/bg.jpg') center/cover no-repeat".
     */
    background?: string;

    /**
     * Дополнительный css-класс.
     */
    className?: string;
};

const {
  title = "",
  description,
  background = "transparent",
  className = "",
} = Astro.props as CardProps;

/**
 * Дефольный компонент карточки.
 * 
 * Определяющий css-класс: "card".
 * 
 * Пример использования:
 * <Card background="url('/images/bg.jpg') center/cover no-repeat" title="Title" description="Description" />
 */
---

<div class={`card ${className}`} style={`background: ${background};`}>
    {title && <div class="title">{title}</div>}
    <div class="description">{description}</div>
</div>
