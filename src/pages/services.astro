---
import Layout from "src/layout/Layout.astro";
import Form from "src/components/form/Form.astro";
import ServicesInfo from "src/logic/service/ServicesInfo.astro";
import TrustReasons from "src/components/trust-reasons/TrustReasons.astro";
import BusinessAssistance from "src/components/business-assistance/BusinessAssistance.astro";
import "src/pages/_index.less";

/**
 * Страница услуг.
 */
---

<Layout className="main-page">
    <Fragment slot="head">
        <title>Услуги: базы данных и DevOps — Прометей</title>
        <meta name="description" content="Комплексные услуги: миграция и сопровождение баз данных PostgreSQL, Oracle, MySQL и внедрение DevOps. Получите индивидуальное решение!" />
    </Fragment>

    <div class="middle-content">
        <ServicesInfo />
    </div>

    <TrustReasons />

    <div class="middle-content">
        <BusinessAssistance />
    </div>

    <Form />
</Layout>
